@using SellAndBuy.Web.Models.Adds.AddModels
@model  IEnumerable<MyAddsViewModel>
@{
    ViewBag.Title = "MyAdds";
}
<h1>@TempData["add"]</h1>

<div class="row">
    
    @foreach (var item in Model)
    {
       
        <div class="col-lg-3">
            @Html.Partial("_LoadDetails", item)
            @using (Html.BeginForm("DeleteAdd", "Add", new { id = item.Id }, FormMethod.Post, new { @class = "form-inline" }))
            {
                @Html.AntiForgeryToken()
                <input value="Delete" type="submit" class="btn btn-default black" onclick="return confirm('Are you sure you want to delete this article?')" />
            }
        </div>

    }
</div>
